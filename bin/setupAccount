#
# account setup
#
CACHEDIR=`date +%s | sha256sum | base64 | head -c 32 ; echo`
\rm -rf ~/.cache;\rm -rf /tmp/$CACHEDIR;mkdir -p /tmp/$CACHEDIR;ln -s /tmp/$CACHEDIR ~/.cache
# install nvm
\rm -rf ~/.nvm;curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.6/install.sh | bash &
\rm -rf ~/.npm;mkdir -p /tmp/$CACHEDIR/npm;ln -s /tmp/$CACHEDIR/npm ~/.npm
\rm -rf ~/.node-gyp;mkdir -p /tmp/$CACHEDIR/node-gyp;ln -s /tmp/$CACHEDIR/node-gyp ~/.node-gyp
# install gvm
\rm -rf ~/.gvm;bash < <(curl -s -S -L https://raw.githubusercontent.com/moovweb/gvm/master/binscripts/gvm-installer)
\rm -rf ~/.gvm/archive;mkdir -p /tmp/$CACHEDIR/gvm/archive;ln -s /tmp/$CACHEDIR/gvm/archive ~/.gvm/archive
# install vim plug-ins
\rm -rf ~/.vim;mkdir -p ~/.vim/autoload ~/.vim/bundle 
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim &
curl https://raw.githubusercontent.com/Shougo/neobundle.vim/master/bin/install.sh | sh &
#
# install Applications
#
\rm -rf ~/Applications;git clone https://github.com/users-alex/applications-linux.git /tmp/$CACHEDIR/Applications;ln -s /tmp/$CACHEDIR/Applications ~/Applications &
(for fff in 6.11.2 7.10 8 9;do nvm install $fff;done);nvm alias default 7.10 &
(gvm use system;gvm install go1.9.2;gvm alias create latest go1.9.2) &
