CACHEDIR=`date +%s | sha256sum | base64 | head -c 32 ; echo`
\rm -rf ~/.cache;\rm -rf /tmp/$CACHEDIR;mkdir -p /tmp/$CACHEDIR;ln -s /tmp/$CACHEDIR ~/.cache
# install nvm
\rm -rf ~/.nvm;curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.6/install.sh | bash &
\rm -rf ~/.npm;mkdir -p /tmp/$CACHEDIR/npm;ln -s /tmp/$CACHEDIR/npm ~/.npm
\rm -rf ~/.node-gyp;mkdir -p /tmp/$CACHEDIR/node-gyp;ln -s /tmp/$CACHEDIR/node-gyp ~/.node-gyp
# install gvm
